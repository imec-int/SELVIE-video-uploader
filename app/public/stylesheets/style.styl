offwhite = #F7F7F4
offblack = #333333

*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Roboto', sans-serif
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	position relative

html, body
	width 100%
	height 100%

body
	background-color offwhite
	position relative
	color offblack
	font-size 16px

a
	text-decoration none
	color gray


.button, button
	border 1px #AAA solid
	background #F0F0F0
	color #666
	cursor pointer
	font-size 14px
	font-weight 400
	height 32px
	min-width 140px
	text-align center
	display inline-block
	cursor pointer
	padding-left 2px
	padding-right 2px

.button:active, button:active
	padding-left 4px

.button:disabled, button:disabled
	color #b6b6b6
	padding-left 0px

a.button
	padding-top 6px

.link
	text-decoration underline
.link:hover
	text-decoration none


.content
	width 900px
	max-width 100%
	margin-left auto
	margin-right auto
	padding-left 20px
	padding-right 20px


.title
	margin-top 20px
	text-align center

.buttonbox
	margin-top 20px
	text-align center

.uploadbutton
	padding 20px
	width 104px
	height 104px
	display inline-block
	-webkit-box-shadow inset 0 0 10px #a8c5ff, 0 0 20px rgb(50,50,50, 0.5)
	box-shadow inset 0 0 10px #a8c5ff, 0 0 20px rgb(50,50,50, 0.5)
	border-color #34BFF3 rgba(0,0,0,0.05) #003C8B
	background #D8DFE2
	border-radius 15px
	font-size 16px
	cursor pointer


	img
		width 100%
		height 100%
		cursor pointer

	input[type=file]
		position absolute
		left 0px
		right 0px
		height 100%
		width 100%
		opacity 0
		margin-top -20px // same as padding of button
		cursor pointer

.uploadbarbox
	margin-top 20px

	.uploadbar
		width 100%
		height 20px
		border-radius 5px
		border 1px solid offblack

		>.fill
			background-color offblack
			width 0%
			height 100%
		>.fill.animate
			-webkit-transition width 0.2s
			transition width 0.2s

.thankyoumessage
	text-align center



// on smartphones:
@media screen and (max-width: 768px)
	body
		font-size 12px
